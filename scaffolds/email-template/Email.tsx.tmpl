import * as React from "react";
import { render } from "@react-email/render";
import { sendEmail } from "@/utils/email/send-email";

type Props = {
    recipient: string;
};

export function ExampleEmail(_props: Props) {
    return (
        <html>
            <body>
                <h1>Hello from Example</h1>
            </body>
        </html>
    );
}

export async function sendExampleEmail(to: string) {
    const html = render(<ExampleEmail recipient={to} />);
    await sendEmail({ to, subject: "Example", html });
}

